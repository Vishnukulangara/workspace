<%= form_for @message, url: messages_path, method: 'post' do |f| %>
	<p>
		Message:<br/>
		<%= f.text_area :message %>
	</p>
	<% if current_user && current_user.role == 'admin'%>
		<p>
		Reciever ID:<br/>
		<%= f.text_field :reciever_id %>
		</p>
	<% end %>

	<p>
		<%= f.submit :send %>

	</p>

<% end %>
<%= link_to 'Back', messages_path, class: "btn btn-default" %>
