<h2>Create Employee</h2>
<%= form_for @employee, {url: employees_path , method: 'post'} do |f| %>
 <p>
 	Name:<br/>
 	<%= f.text_field :name %>
 </p>
 <p>
 	email ID:<br/>
 	<%= f.text_field :email %>
 </p>
 
	<p>
		Date of Employment commenced:<br/>
		<%= f.date_field :date_of_joining %>
	</p>
	<p>
		Employment Status:<br/>
		<%= f.text_field :employment_status %>
	</p>
	<p>
		Section:<br/>
		<%= f.text_field :section %>
	</p>
	<p><%= f.submit %></p>
<% end %>
<%= link_to 'Back', employees_path, class: "btn btn-default" %>