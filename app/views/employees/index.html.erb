<h2>Employees List</h2>

	<table class = 'table'>
		<tr>
			<th>Employee Name</th>
			<th>Employee ID</th>
		</tr>
	<% @employees.each do |employee| %>
		<tr>
			<td><%= link_to employee.name, employee_path(employee) %></td>
			
			<td><%= employee.id %></td>
		</tr>
	<% end %>
	</table>
<br/>


<% if current_user.role =='admin' %>
	<%= link_to 'Create new employee', new_employee_path %>|
<% end %>

